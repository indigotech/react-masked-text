{
  "compilerOptions": {
    "jsx": "react",
    "module": "ESNext",
    "allowJs": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "lib": ["dom", "dom.iterable", "ES2020"],
    "target": "ES5",
    "declaration": true,
    "sourceMap": true,
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "declarationDir": "types"
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
